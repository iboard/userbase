<% title = defined?(title) ? title : t(:or_authenticate_through_service) %>
<h2><%= title %></h2>
<%= render '/authentications/authentications'%>

<p style='clear: both;'>

<%- if controller_name != 'sessions' && !user_signed_in? %>
  <%= link_to "Sign in", new_session_path(resource_name) %><br />
<% end -%>

<% if defined?(devise_mapping) %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' && !user_signed_in? %>
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  <% end -%>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && !user_signed_in? %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end -%>
  
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' &&!user_signed_in? %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
  <% end -%>
  
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' && !user_signed_in? %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
  <% end -%>
<% end %>
