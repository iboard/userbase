<%= content_tag :div, :id => "blog_id='#{blog_entry.id}'", :class => 'blog_entry' do %>
  <div class='blog_ratings' >
    <%= rating_links( blog_entry, current_user ) %>
    <br/>
    <%= t(:n_comments, :count => blog_entry.comments.count)%><br/>
    <%= link_to t(:read), blog_entry %>
  </div>
  
  <% if img_url = blog_entry.image_asset_url %>
    <%= image_tag img_url, :class => 'blog_image_preview' %>
  <% else %>
    <%= content_tag :div, :class => 'blog_image_missing' do %>
      <% if blog_entry.user %>
        <%= image_tag(blog_entry.user.avatar_url(:preview) )  %>
      <% else %>
        <%= t(:no_image_preview)  %>
      <% end %>
     <% end %>
  <% end %>
  
  <em><small><%= t(:blog_entry_by, 
          :type => t(blog_entry.class.to_s.downcase.to_sym), 
          :user => blog_entry.user ? blog_entry.user.nickname : t(:anonymous), 
          :date => blog_entry.updated_at.to_s(:long)
        )
  -%></em></small><br/><h3><%= link_to blog_entry.object_title, blog_entry %></h3> 
  
  <% if blog_entry.tag_list.any? %>
   [ <%= tag_list(blog_entry.tag_list)%> ]
  <% end %>
  
  <%= content_tag :div, :class => 'blog_body_preview' do %>
    <%= sanitize(RedCloth.new(blog_entry.object_body.paragraphs[0]).to_html) %>
  <% end %>
  
  <p style='clear: right;'></p>
<% end %>