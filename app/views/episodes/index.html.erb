<% if can? :create, Episode.new %>
  <% content_for :new_button do %>
    <%= link_to( sc(:add,:nbsp)+t(:new_episode), 
                     new_user_episode_path(current_user),
                     :class => 'top_right_buttons') %>
  <% end %>
<% end %>

<% content_for :language_filter do %>
  <% unless @tag %>
      <%= language_filter.html_safe %>
  <% else %>
      <%= t(:episodes_tagged_with, :tag => @tag ) %>
  <% end %>
<% end %>

<div id='episodes'>
  <% title t(:listing_episodes), false %>
  <%= will_paginate @episodes %>
  <% if (params[:page].nil? || params[:page] == '1') && params[:tag].nil? %>
    <%= html_include('public/static_pages/episodes.html').html_safe %>
  <% end %>
  <%= render :partial => @episodes, :locals => { :show_all => false } %>
  <%= will_paginate @episodes %>
</div>
