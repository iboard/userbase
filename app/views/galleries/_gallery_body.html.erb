<div class='blog_body'>
  
    <div>
      <%= content_tag :div, :class => 'gallery_preview' do %>
        <%= render :partial => "/galleries/preview.html.erb", 
                   :collection => gallery.assets.where("asset_content_type like ?",'%image%').all, 
                   :as => :asset,
                   :type => :html %>
      <% end %>
    </div>
    
    <div style='clear: both;'>
      <%= sanitize(RedCloth.new(gallery.body).to_html.html_safe) %>
    </div>
</div>